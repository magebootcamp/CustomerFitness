<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="MageBootcamp_CustomerFitness::css/customerSizes.css"/>
    </head>
    <body>
        <referenceBlock name="catalog.my-size.sidebar">
            <block class="MageBootcamp\CustomerFitness\Block\Sidebar\CustomerSize" name="my-size.sidebar.use.customer.fitness"
                   template="MageBootcamp_CustomerFitness::product/sidebar/use_customer_fitness_size.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="customerSize" xsi:type="array">
                                <item name="component" xsi:type="string">MageBootcamp_CustomerFitness/js/customer-size</item>
                            </item>
                        </item>
                        <item name="scope" xsi:type="string">customerSize</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
